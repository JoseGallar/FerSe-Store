<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:id="@+id/layout_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_filter_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Todo"
            android:textSize="12sp"
            android:textColor="#546E7A"
            android:backgroundTint="#CFD8DC"
            android:layout_marginEnd="8dp"
            app:cornerRadius="20dp"/>

        <Button
            android:id="@+id/btn_filter_month"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Mes"
            android:textSize="12sp"
            android:textColor="#546E7A"
            android:backgroundTint="#CFD8DC"
            android:layout_marginEnd="8dp"
            app:cornerRadius="20dp"/>

        <Button
            android:id="@+id/btn_filter_today"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Hoy"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1976D2"
            app:cornerRadius="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_filters">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8F5E9"
            android:layout_marginEnd="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INGRESOS"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>
                <TextView
                    android:id="@+id/tv_total_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 450,00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFEBEE"
            android:layout_marginStart="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GASTOS"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#C62828"/>
                <TextView
                    android:id="@+id/tv_total_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 0,00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#C62828"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_balance"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/layout_summary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BALANCE"
                android:textColor="?android:attr/textColorPrimary"/>
            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 450,00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/dinero_positivo"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_mov_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movimientos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#9E9E9E"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_balance"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_transactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_mov_title"
        app:layout_constraintBottom_toTopOf="@id/layout_buttons"/>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_registrar_gasto"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="REGISTRAR GASTO"
            android:backgroundTint="#D50000"
            android:textStyle="bold"
            app:cornerRadius="25dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ver_ganancias"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="GANANCIAS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#2E7D32"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_my_calendar"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>